@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2 class="display-4">Add a new Dish!!</h2>
</div>

@model dish
    <form action="create" method="post">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Chef's Name</label>
                    <input type="text" asp-for="Chef" class="form-control">
                    <span asp-validation-for="Chef" style="color:red;"></span>
                </div>
                <div class="form-group">
                    <label>Name of Dish</label>
                    <input type="text" asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" style="color:red;"></span>
                </div>
					<div class="form-group">
                    <label># of Calories</label>
                    <input type="number" asp-for="Calories" class="form-control">
                    <span asp-validation-for="Calories" style="color:red;"></span>
                </div>				
            </div>
            <div class="col-sm-4">
				 <div class="form-group">
                    <label>Tastiness</label>
					<select type="number" asp-for="Tastiness" class="form-control">
						<option value=""></option>
						<option value=1>1</option>
						<option value=2>2</option>
						<option value=3>3</option>
						<option value=4>4</option>
						<option value=5>5</option>
					</select>
                    <span asp-validation-for="Tastiness" style="color:red;"></span>
                </div>
			</div>
			<div class="col-sm-4">
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" asp-for="Description" class="form-control">
                    <span asp-validation-for="Description" style="color:red;"></span>
					<input type="submit" value="Add Dish" class="btn btn-outline-success">
                </div>
            </div>
        </div>
    </form>